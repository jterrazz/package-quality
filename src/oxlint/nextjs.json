{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "extends": [
    "./base.json"
  ],
  "plugins": [
    "typescript",
    "import",
    "react",
    "nextjs"
  ],
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    ".next/**",
    "next-env.d.ts"
  ],
  "rules": {
    "remove-ts-extensions/remove-ts-extensions": "error"
  }
}
