{
  "name": "@jterrazz/quality",
  "version": "6.0.0",
  "author": "Jean-Baptiste Terrazzoni <contact@jterrazz.com>",
  "bin": {
    "ts-check": "./src/ts-check.sh",
    "ts-fix": "./src/ts-fix.sh"
  },
  "files": [
    "src"
  ],
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./oxlint/node": "./src/oxlint/node.json",
    "./oxlint/expo": "./src/oxlint/expo.json",
    "./oxlint/nextjs": "./src/oxlint/nextjs.json",
    "./oxfmt": "./src/oxfmt/index.json"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "oxlint -c src/oxlint/node.json",
    "lint:fix": "oxlint -c src/oxlint/node.json --fix",
    "format": "oxfmt --config src/oxfmt/index.json .",
    "format:check": "oxfmt --config src/oxfmt/index.json --check .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "build": "# no build script"
  },
  "dependencies": {
    "eslint-plugin-perfectionist": "^4.15.1",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.35.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@types/node": "*"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  }
}
